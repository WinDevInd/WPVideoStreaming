<BaseType:BasePage
    xmlns:BaseType="using:WooqerTest.Shared" 
    x:Class="WooqerTest.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WooqerTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    BaseType:BasePage.SupportedOrientations="Portrait"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="SearchDataResultTemplate">
            <Button Style="{StaticResource FeedbackButton}" 
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                    Command="{Binding ItemTapped}" CommandParameter="{Binding Data}" 
                    Margin="0,0,0,48" Background="{StaticResource ElementBackgroundBrush}">
                <Grid HorizontalAlignment="Stretch" DataContext="{Binding Data}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Margin="0,0,0,12"
                           Stretch="Uniform" MinHeight="250"
                       Source="{Binding Thumbnails.Medium}" Width="{Binding DataContext.Width,ElementName=VideoList}" 
                           HorizontalAlignment="Center" Unloaded="Image_Unloaded"/>

                    <TextBlock Grid.Column="1" Grid.Row="1" 
                               Text="{Binding Title}"
                               TextWrapping="WrapWholeWords"
                               TextTrimming="CharacterEllipsis"
                               FontSize="{StaticResource LargeFont}" 
                               FontFamily="{StaticResource BoldFont}"
                               Margin="12,5"
                               Foreground="{StaticResource AppForegroundContentBrush}" />

                    <TextBlock Grid.Column="1" Grid.Row="2"
                               TextTrimming="CharacterEllipsis"
                               Text="{Binding Description}" TextWrapping="Wrap"
                               FontSize="{StaticResource SmallFont}"
                               Foreground="{StaticResource AppForegroundContentBrush}"
                               FontFamily="{StaticResource ButtonContetnFont}"
                               Margin="12,5"/>
                </Grid>
            </Button>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource AppPrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="{ThemeResource AppAccentBrush}">
            <TextBox x:Name="SearchBox" Text="{Binding SearchText}" 
                     PlaceholderText="Search on Youtube"
                     Background="#f1f1f1"
                     InputScope="Search"  KeyDown="SearchBox_KeyDown" 
                     Grid.Row="0" Padding="12" Margin="12,24,12,12"
                     BorderBrush="LightGray" BorderThickness="1" 
                     Foreground="{StaticResource AppPrimaryBrush}"/>
        </StackPanel>
        
        <ListView x:Name="VideoList" Grid.Row="1" Background="{StaticResource AppPrimaryBrush}"
                  ItemsSource="{Binding SearchResults}"
                  Transitions="{StaticResource DefaultListTransition}"
                  ItemContainerStyle="{StaticResource DefaultListViewItemStyle}"
                  ItemTemplate="{StaticResource SearchDataResultTemplate}">
        </ListView>
        <ProgressRing Grid.RowSpan="2"
                      IsActive="{Binding IsLoading}"
                      VerticalAlignment="Center" HorizontalAlignment="Center" 
                      Foreground="{StaticResource AppAccentBrush}"/>
    </Grid>
</BaseType:BasePage>
